{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}
{% block body %}
<div>
    {% if posts|length %}
        {% for post in posts %}
            <div>
                <a href="{{ path('app_micro_post_show', {id: post.id}) }}">
                    {{ post.title }}
                </a>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
